################################################################################
## ~/.todo/config

# todo.txt directory
export TODO_DIR="$HOME/b"
#export TODO_DIR=`dirname "$0"`

# todo/done/report.txt locations
export TODO_FILE="$HOME/t"
export DONE_FILE="$TODO_DIR/done.txt"
export REPORT_FILE="$TODO_DIR/report.txt"

# actions directory location
export TODO_ACTIONS_DIR="$HOME/.todo/actions.d"

# no colors, no fancy
TODOTXT_PLAIN=1
PRI_X=$NONE
PRI_A=$NONE
PRI_B=$NONE
PRI_C=$NONE
DEFAULT=$NONE
COLOR_DONE=$NONE

